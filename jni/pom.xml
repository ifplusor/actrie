<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>psn.ifplusor</groupId>
    <artifactId>actrie</artifactId>
    <version>3.1.0</version>
    <packaging>nar</packaging>

    <name>actrie</name>
    <description>Aho-Corasick automation for large-scale multi-pattern matching.</description>
    <url>https://github.com/ifplusor/actrie</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <!-- Maven properties -->
        <maven.test.skip>true</maven.test.skip>
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.scijava</groupId>
            <artifactId>native-lib-loader</artifactId>
            <version>2.3.4</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.maven-nar</groupId>
                <artifactId>nar-maven-plugin</artifactId>
                <version>3.10.1</version>
                <extensions>true</extensions>
                <configuration>
                    <linker>
                        <libs>
                            <lib>
                                <name>alib</name>
                                <type>static</type>
                                <directory>${project.basedir}/../lib</directory>
                            </lib>
                            <lib>
                                <name>actrie</name>
                                <type>static</type>
                                <directory>${project.basedir}/../lib</directory>
                            </lib>
                        </libs>
                    </linker>
                    <cpp>
                        <includePaths>
                            <includePath>
                                <path>${project.basedir}/../include</path>
                            </includePath>
                            <includePath>
                                <path>${project.basedir}/../deps/alib/include</path>
                            </includePath>
                        </includePaths>
                    </cpp>
                    <libraries>
                        <library>
                            <type>jni</type>
                            <narSystemPackage>psn.ifplusor.actrie</narSystemPackage>
                        </library>
                    </libraries>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>msvc-16_0</id>
            <properties>
                <nar.windows.msvc.version>16.0</nar.windows.msvc.version>
                <nar.windows.msvc.dir>C:\Program Files (x86)\Microsoft Visual Studio\2019\Community</nar.windows.msvc.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.maven-nar</groupId>
                        <artifactId>nar-maven-plugin</artifactId>
                        <configuration>
                            <cpp>
                                <options>
                                    <option>/std:c++latest</option>
                                    <option>/utf-8</option>
                                </options>
                            </cpp>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
    </profiles>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub OWNER Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/ifplusor/actrie</url>
        </repository>
    </distributionManagement>

</project>
